<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>

<?import javafx.scene.control.ToggleGroup?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.apaschold.apabfahrteninfo.ui.singlestop.SingleStopController"
      alignment="CENTER"
      spacing="10.0">

    <HBox alignment="CENTER"
          spacing="20.0">
        <VBox alignment="CENTER"
              prefWidth="400.0"
              spacing="20.0">

            <Button text="Aktualisieren"
                    prefWidth="200.0"
                    onAction="#showNextStopTimes"/>
            <Label text="Haltestelle ausw채hlen"
                   style="-fx-font-weight: bold; -fx-font-size: 14;"/>

            <VBox>
                <TextField fx:id="searchBarForStops"
                           prefHeight="40.0"
                           maxWidth="380.0"
                           onKeyTyped="#showStopSuggestions"
                           promptText="Haltestelle"/>

                <ListView fx:id="stopSuggestions"
                          maxWidth="380.0"
                          maxHeight="100.0"
                          onMouseClicked="#showNextStopTimes"/>
            </VBox>

            <Label text="Zeit ausw채hlen"
                   style="-fx-font-weight: bold; -fx-font-size: 14;"/>

            <HBox alignment="CENTER"
                  spacing="20.0">
                <Button text="Demn채chst"
                        prefHeight="20.0"
                        onAction="#setNow"/>

                <fx:define>
                    <ToggleGroup fx:id="arrivalOrDeparture"/>
                </fx:define>

                <RadioButton fx:id="searchForDepartures"
                             text="Abfahrt"
                             selected="true"
                             toggleGroup="$arrivalOrDeparture"/>

                <RadioButton fx:id="searchForArrivals"
                             text="Ankunft"
                             toggleGroup="$arrivalOrDeparture"/>
            </HBox>

            <HBox alignment="CENTER"
                  spacing="10.0">
                <Label text="Tag:"/>
                <DatePicker fx:id="selectedDate"
                            prefWidth="100.0"/>
                <Label text="HH:"/>
                <ComboBox fx:id="selectedHour"/>
                <Label text="MM"/>
                <ComboBox fx:id="selectedMinute"/>
            </HBox>
        </VBox>

        <VBox alignment="TOP_CENTER"
              prefWidth="400.0"
              spacing="10.0">
            <Label text="Ankunft/Abfahrt in der n채chsten Stunde"
                   textAlignment="CENTER"
                   style="-fx-font-weight: bold; -fx-font-size: 20;"/>

            <ListView fx:id="nextStopTimes"
                      prefWidth="380.0"/>
        </VBox>
    </HBox>
    <Button text="Zur Streckensuche"
            onAction="#goToDirectRouteSearch"
            prefWidth="880.0"
            style="-fx-font-size: 14; -fx-background-color: burlywood"/>
</VBox>




